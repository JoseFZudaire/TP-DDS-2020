@using TP_DDS_MVC.Models.Ingresos;
@using TP_DDS_MVC.Models.Compras;
@model Ingreso
@{ 
    ViewBag.Title = "Detalle Ingreso";
}

<div class="mb-3">
    <h2>Detalle Ingreso</h2>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label for="descripcion">Descripcion</label>
        <input id="descripcion" class="form-control" type="text" value=@Model.descripcion disabled>
    </div>
    <div class="form-group col-md-6">
        <label for="monto">Monto total</label>
        <input id="monto" class="form-control" type="text" value=@Model.monto disabled>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <div class="form-group">
            <label for="fechas">Fechas</label>
            <input id="fechaDesde" class="form-control" type="text" value=@Model.fechaDesde disabled><br />
            <input id="fechaHasta" class="form-control" type="text" value=@Model.fechaHasta disabled>
        </div>
    </div>
</div>

    <div class="mb-3">
        <div class="form-row">
            <div class="form-group col-4">
                <label for="egresos">Egresos Asociados</label>
                @foreach (Egreso egreso in @Model.egresosAsociados)
                {
                    <input id="egresos" class="form-control" type="text" value="@egreso.detalle, $@egreso.montoTotal" disabled>
                }
            </div>
            <br />
            <ul class="list-group list-group-flush pb-5" id="listaEgresos">
            </ul>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-10">
            &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Finalizar Edicion", "ListIngresos", new { controller = "Ingreso" }, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
