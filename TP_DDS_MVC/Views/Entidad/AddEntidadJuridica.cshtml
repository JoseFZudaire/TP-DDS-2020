
@{
    ViewBag.Title = "Agregar Entidad";
}


<div class="container-fluid">
    <div class="pb-3">
        <h2>Crear un Presupuesto</h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="nombreFicticio">Nombre ficticio</label>
            <input id="nombreFicticio" class="form-control" type="text" placeholder="Nombre ficticio">
        </div>
        <div class="form-group col-md-6">
            <label for="razonSocial">CUIT</label>
            <input id="razonSocial" class="form-control" type="text" placeholder="Razon Social">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="codIGJ">CUIT</label>
            <input id="codIGJ" class="form-control" type="text" placeholder="Codigo IGJ">
        </div>
        <div class="form-group col-md-6">
            <label for="codIGJ">Codigo de inscripcion definitiva (IGJ)</label>
            <input id="codIGJ" class="form-control" type="text" placeholder="Codigo IGJ">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="ciudad">Ciudad</label>
            <input type="text" class="form-control" id="ciudad">
        </div>
        <div class="form-group col-md-4">
            <label for="estado">Estado/Provincia</label>
            <input type="text" class="form-control" id="pais">
        </div>
        <div class="form-group col-md-4">
            <label for="pais">Pais</label>
            <input type="text" class="form-control" id="pais">
        </div>
    </div>
    <div class="form-group">
        <label for="tipoOrg">Tipo de Organizacion</label>
        <input list="tiposOrg" class="form-control" placeholder="Seleccionar..." id="tipoOrg" type="text">
        <datalist id="tiposOrg">
            <option value="Empresa"></option>
            <option value="OSC"></option>
        </datalist>
    </div>
    <div class="form-group">
        <label for="razonSocial">CUIT</label>
        <input id="razonSocial" class="form-control" type="text" placeholder="Razon Social">
    </div>
    <div id="formEmpresa" class="form-row">
        <div class="form-group col-md-6">
            <label for="sector">Sector</label>
            <input id="secrot" class="form-control" type="text" placeholder="Sector">
        </div>
        <div class="form-group col-md-4">
            <label for="promVentas">Promedio de ventas</label>
            <input id="promVentas" type="number" class="form-control" placeholder="1" step="0.01" min="1">
        </div>
        <div class="form-group col-md-2">
            <label for="cantPersonal">Cantidad de personal</label>
            <input id="cantPersonal" type="number" class="form-control" placeholder="1" min="1" >
        </div>
    </div>
    <span>
        <button class="btn btn-success col-lg-2" id="submit">Crear</button>
        @Html.ActionLink("Cancelar", "Index", new { controller = "Compra" }, new { @class = "btn btn-secondary col-lg-1" })
    </span>
</div>
