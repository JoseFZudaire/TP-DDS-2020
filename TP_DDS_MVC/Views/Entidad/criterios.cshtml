@using TP_DDS_MVC.Models.Compras;

@{
    ViewBag.Title = "criterios";
    var criterios = ViewBag.criterios;
}

<div class="mb-4">
    <h2>Agregar criterios y categorias</h2>
</div>

@using (Html.BeginForm("criterios", "Entidad", FormMethod.Post))
{

    <div class="form-row mb-3">
        <h5><label for="criterio">Criterio</label></h5>
        <div class="col-10">
        <input id="criterio" name="criterio" class="form-control" type="text" placeholder="Nuevo criterio">
         </div>
        <div class="form-group col-4 mt-3" >

            <h5><label for="criterioMayor">Criterio mayor</label></h5>
            <div class="col-10">
                <input list="criterioPadre" class="form-control" id="criterioPadre" name="criterioPadre" placeholder="Seleccionar..." type="text">
                <datalist id="criterioPadre">
                    @foreach (Criterio crit in (List<Criterio>)ViewBag.criterios)
                    {
                        <option value=@crit.idCriterio>@crit.nombre</option>
                    }
                </datalist>
            </div>
        </div>
    </div>

    <div class="form-row mb-3">
        <div class="form-group col">
            <h5><label for="numDoc">Categorias (separadas por ",")</label></h5>
            <div class="col-10">
                <input id="categorias" name="categorias" class="form-control" type="text" placeholder="Cat1, Cat2, Cat3, ...,">
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-10">
            <input class="btn btn-success" type="submit" value="Agregar" />
            &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Cancelar", "Index", new { controller = "Home" }, new { @class = "btn btn-secondary" })
        </div>
    </div>

}