@using TP_DDS_MVC.Models.Compras;
@model List<MedioDePago>
@{
    ViewBag.Title = "Listado Medios de Pago";
}

<div class="alert alert-secondary my-4" role="alert">
    <h2>Listado de Medios de Pago</h2>
</div>

<div class="container-fluid">
    @if (Model == null || Model.Count == 0)
    {
        <p class="ml-2 lead">No hay Medios de Pago cargados.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Instrumento</th>
                    <th scope="col">Número de Instrumento</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (MedioDePago pres in Model)
                {
                    <tr>
                        <th scope="row">@pres.idMedioPago</th>
                        <td>@pres.tipo.name</td>
                        <td>@pres.numero</td>
                        aca falta detalle
                        <td>@Html.ActionLink("Editar", "EditMedioDePago", "Compra", new { id = pres.idMedioPago }, new { @class = "btn btn-secondary btn-sm" })</td>
                        <td>@Html.ActionLink("Eliminar", "DeleteMedioDePago", "Compra", new { id = pres.idMedioPago }, new { @class = "btn btn-danger btn-sm" })</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

