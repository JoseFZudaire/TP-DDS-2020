@using TP_DDS_MVC.Models.Compras;
@model Compra
@{
    ViewBag.Title = "Detalle Compra";
}

<div class="mb-3">
    <h2>Detalle Compra</h2>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label for="descripcion">Descripcion</label>
        <input id="descripcion" class="form-control" type="text" value=@Model.descripcion disabled>
    </div>
    <div class="form-group col-md-6">
        <label for="cantMinPres">Cantidad minima de presupuestos</label>
        <input id="cantMinPres" class="form-control" type="text" value=@Model.cantMinimaPresupuestos disabled>
    </div>
</div>
<div class="form-row">
    <div class="form-group col">
        <div class="form-group">
            <label for="revisor">Revisores</label>
            <input id="revisores" class="form-control" type="text" value=@Model.revisores disabled>
        </div>
    </div>
</div>

<div class="mb-4">
</div>
<div class="ml-4">
    <div class="form-group mb-3">
        <label for="fecha">Fecha del egreso:</label>
        <input id="fecha" class="form-control" type="text" value=@Model.egreso.fechaEgreso disabled>
    </div>
    <div class="form-row mb-3">
        <div class="form-group col mr-5">
            <label for="proveedores">Prestador de servicios:</label>
            <input id="proveedores" class="form-control" type="text" value=@Model.egreso.prestadorDeServicios disabled>
        </div>
        <div class="form-group col">
            <label for="mediosDePago">Medios de pago:</label>
            <input id="revisores" class="form-control" type="text" value=@Model.egreso.medioDePago disabled>
        </div>
    </div>


    <div class="mb-3">
        <div class="form-row">
            <div class="form-group col-4">
                <label for="items">Items</label>
                @foreach (Item item in @Model.egreso.detalle)
                {
                    <input id="items" class="form-control" type="text" value="@item.descripcion, $@item.valor, @item.cant unidades" disabled>
                }
            </div>
            <br />
            <ul class="list-group list-group-flush pb-5" id="listaItems">
            </ul>
        </div>
    </div>
    <br />
    <div class="form-group row">
        <div class="col-10">
            &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Finalizar Edicion", "ListCompras", new { controller = "Compra" }, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
