
@using TP_DDS_MVC.Models.Compras
@model TP_DDS_MVC.Models.Compras.Presupuesto
@{

    ViewBag.Title = "Editar Presupuesto";


}

<div class="mb-3">
    <h2>Editar Presupuesto</h2>
</div>
@if (ViewBag.errorMsg != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.errorMsg
    </div>
}

@using (Html.BeginForm("EditPresupuesto", "Compra", FormMethod.Post))
{
    @Html.HiddenFor(p => p.idCompra)
    @Html.HiddenFor(p => p.idDocComercial)
    @Html.HiddenFor(p => p.idEgreso)



    <div class="form-row">
        <div class="form-group col-12">
            <label for="nroIdentificacion">Numero de Identificacion</label>
            @Html.TextBoxFor(p => p.nroIdentificacion, new { @class = "form-control" })
        </div>
    </div>


    <div id="formPresupuesto">
        <div class="form-row">
            <div class="form-group col">
                <label for="proveedores">Proveedor</label>
                @Html.DropDownListFor(p => p.idPrestadorDeServicios, new SelectList(ViewBag.prestadoresDeServicios, "idPrestador", "razonSocial"), new { @class = "form-control" })
            </div>
            <div class="form-group col">
                <label for="mediosDePago">Medio de Pago</label>
                <input list="mediosDePago" class="form-control" placeholder="Seleccionar..." id="medioDePago" type="text">
                <datalist id="mediosDePago">
                    @Html.DropDownListFor(p => p.idMedioDePago, new SelectList(ViewBag.mediosDePago, "idMedioDePago", "instrumento"), new { @class = "form-control" })
                </datalist>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <label for="moneda">Seleccione una Moneda:</label>
                <input class="form-control" list="monedas" id="moneda" type="text" placeholder="Seleccionar...">
                <datalist id="monedas">
                    @Html.DropDownListFor(p => p.idMoneda, new SelectList(ViewBag.monedas, "idMoneda", "descripcion"), new { @class = "form-control" })
                </datalist>
            </div>
        </div>
    </div>

    <span class="mt-5">
        <button class="btn btn-success col-lg-2" id="submit">Crear</button>
        @Html.ActionLink("Cancelar", "ListPresupuestos", new { controller = "Compra" }, new { @class = "btn btn-secondary col-lg-1 " })
    </span>
} 