@using TP_DDS_MVC.Models.Compras;

@{
    ViewBag.Title = "criterios";
    var criterios = ViewBag.criterios;
}

<div class="mb-4">
    <h2>Agregar criterios y categorias</h2>
</div>
@if (ViewBag.errorMsg != null)
{
    <div class="alert alert-danger mb-3" role="alert">
        @ViewBag.errorMsg
    </div>
}

@using (Html.BeginForm("criterios", "Compra", FormMethod.Post))
{

    <div class="form-group mb-3">
        <label for="criterio">Nombre del criterio</label>
        <input id="criterio" name="criterio" class="form-control" type="text" placeholder="Nuevo criterio">
    </div>

    <div class="form-group mt-3">
        <label for="criterioPadre">Criterio padre</label>
        <input list="criterios" class="form-control" id="criterioPadre" name="criterioPadre" placeholder="Seleccionar..." type="text">
        <datalist id="criterios">
            @foreach (Criterio crit in (List<Criterio>)ViewBag.criterios)
            {
                <option value="@crit.idCriterio">@crit.nombre</option>
            }
        </datalist>
    </div>

    <div class="form-group">
        <label for="categorias">Categorias (separadas por ",")</label>
        <input id="categorias" name="categorias" class="form-control" type="text" placeholder="Cat1, Cat2, Cat3, ...,">
    </div>

    <div class="form-group">
        <div class="col-10">
            <input class="btn btn-success" type="submit" value="Agregar" />
            &nbsp;&nbsp;&nbsp;
            @Html.ActionLink("Cancelar", "Index", new { controller = "Home" }, new { @class = "btn btn-secondary" })
        </div>
    </div>

}