@using TP_DDS_MVC.Models.Entidades
@model EntidadBase
@{
    ViewBag.Title = "VerEntidadBase";
}

<div class="mb-3">
    <h2>Ver Entidad Base</h2>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
        <label for="nombreFicticio">Nombre ficticio</label>
        <input id="nombreFicticio" value="@Model.nombreFicticio" class="form-control" type="text" placeholder="Nombre ficticio" disabled>
    </div>
    <div class="form-group col-md-6">
        <label for="descripcion">Descripcion</label>
        <input id="descripcion" value="@Model.descripcion" class="form-control" type="text" placeholder="Descripcion" disabled>
    </div>
</div>

<div class="form-group">
    <label for="tipoOrg">Tipo de Organizacion</label>
    <input id="tipoOrg" value="Entidad Base" class="form-control" type="text" placeholder="tipoOrg" disabled>
</div>
<div class="form-group">
    <label for="actividad">Actividad</label>
    <input id="actividad" value="Model.tipoOrganizacion.actividad" class="form-control" type="text" placeholder="Actividad" disabled>
</div>
<div id="formEmpresa" class="form-row">
    <div class="form-group col-md-6">
        <label for="sector">Sector</label>
        <input id="sector" value="Model.tipoOrganizacion.idTipoOrganizacion" class="form-control" type="text" placeholder="sector" disabled>
    </div>
    <div class="form-group col-md-4">
        <label for="promVentas">Promedio de ventas</label>
        <input id="promVentas" value="Model.tipoOrganizacion.promVentas" type="number" class="form-control" placeholder="1" step="0.01" min="1" disabled>
    </div>
    <div class="form-group col-md-2">
        <label for="cantPersonal">Cantidad de personal</label>
        <input id="cantPersonal" value="Model.cantPersonal" type="number" type="number" class="form-control" placeholder="1" min="1" disabled>
    </div>
</div>

